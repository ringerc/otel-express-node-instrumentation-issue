{
  "name": "testapp",
  "version": "1.0.0",
  "private": true,
  "main": "dist",
  "scripts": {
    "build:tracing": "esbuild tracing.ts --bundle --platform=node --outfile=dist/tracing.js",
    "build:separate": "esbuild src/use_require_arg.ts --bundle --platform=node --external:request --outfile=dist/use_require_arg.js && npm run build:tracing",
    "build:combined": "esbuild src/direct_import.ts --bundle --platform=node --external:request --outfile=dist/direct_import.js",
    "build": "rm -rf dist && npm run build:separate && npm run build:combined",
    "start:combined": "NODE_ENV=development node dist/direct_import.js",
    "start:separate": "NODE_ENV=development node --require ./dist/tracing.js dist/use_require_arg.js"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "@opentelemetry/api": "^1.2.0",
    "@opentelemetry/core": "^1.6.0",
    "@opentelemetry/instrumentation": "^0.32.0",
    "@opentelemetry/instrumentation-express": "^0.31.0",
    "@opentelemetry/instrumentation-http": "^0.31.0",
    "@opentelemetry/resources": "^1.6.0",
    "@opentelemetry/sdk-trace-base": "^1.6.0",
    "@opentelemetry/sdk-trace-node": "^1.6.0",
    "@opentelemetry/semantic-conventions": "^1.6.0",
    "@types/express": "4.17.13",
    "@types/node": "18.6.3",
    "consola": "2.15.3",
    "express": "4.18.1"
  },
  "devDependencies": {
    "esbuild": "0.14.51"
  },
  "engineStrict": true,
  "engines": {
    "node": ">= 18.4.0",
    "npm": ">= 8.15.1"
  }
}
